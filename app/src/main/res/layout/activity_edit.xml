<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.author.EditActivity"
    android:background="@drawable/background">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/tb_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:paddingTop="@dimen/d40"
        android:paddingBottom="@dimen/d20"
        app:contentInsetStart="0dp"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/d15"
            android:text="Cancel"
            android:textColor="@color/c5"
            android:textSize="@dimen/sp17" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Settings"
            android:textColor="@color/c3"
            android:textSize="@dimen/sp17"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="@dimen/d20"
            android:text="Save"
            android:textColor="@color/c5"
            android:textSize="@dimen/sp17" />

        <TextView
            android:id="@+id/tv_logout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="@dimen/d10"
            android:text="Logout"
            android:textColor="@color/c5"
            android:textSize="@dimen/sp17" />
    </androidx.appcompat.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tb_title"
        app:layout_constraintVertical_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/d15"
                android:text="Name"
                android:textColor="@color/c3"
                android:textSize="@dimen/s15" />

            <EditText
                android:id="@+id/et_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:hint="Enter full name"
                android:maxLength="20"
                android:paddingLeft="@dimen/d15"
                android:paddingTop="@dimen/d15"
                android:paddingBottom="@dimen/d15"
                android:textColor="@color/c3"
                android:textColorHint="@color/c2"
                android:textSize="@dimen/s15" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/d15"
                android:text="Profession"
                android:textColor="@color/c3"
                android:textSize="@dimen/s15" />

            <EditText
                android:id="@+id/et_profession"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:hint="Enter profession"
                android:paddingLeft="@dimen/d15"
                android:paddingTop="@dimen/d15"
                android:paddingBottom="@dimen/d15"
                android:textColor="@color/c3"
                android:textColorHint="@color/c2"
                android:textSize="@dimen/s15" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/d15"
                android:text="Age"
                android:textColor="@color/c3"
                android:textSize="@dimen/s15" />

            <EditText
                android:id="@+id/et_age"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:hint="Enter age"
                android:inputType="number"
                android:maxLength="3"
                android:paddingLeft="@dimen/d15"
                android:paddingTop="@dimen/d15"
                android:paddingBottom="@dimen/d15"
                android:textColor="@color/c3"
                android:textColorHint="@color/c2"
                android:textSize="@dimen/s15" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/d15"
                android:text="Bio"
                android:textColor="@color/c3"
                android:textSize="@dimen/s15" />

            <EditText
                android:id="@+id/et_bio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:hint="Enter bio"
                android:paddingLeft="@dimen/d15"
                android:paddingTop="@dimen/d15"
                android:paddingBottom="@dimen/d15"
                android:textColor="@color/c3"
                android:textColorHint="@color/c2"
                android:textSize="@dimen/s15" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/d15"
                android:text="Seeking Age Range"
                android:textColor="@color/c3"
                android:textSize="@dimen/s15" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:gravity="center_vertical"
                android:paddingTop="@dimen/d20"
                android:paddingBottom="@dimen/d20">

                <TextView
                    android:id="@+id/tv_age_min"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/d15"
                    android:text="Min:0"
                    android:textColor="@color/c3"
                    android:textSize="@dimen/s15" />

                <SeekBar
                    android:id="@+id/sb_age_min"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:max="100"
                    android:progress="18"
                    android:progressBackgroundTint="@color/c2"
                    android:progressTint="@color/c5"
                    android:thumb="@mipmap/abc_btn_switch_to_on_mtrl_00001" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:gravity="center_vertical"
                android:paddingBottom="@dimen/d20">

                <TextView
                    android:id="@+id/tv_age_max"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/d15"
                    android:text="Max:0"
                    android:textColor="@color/c3"
                    android:textSize="@dimen/s15" />

                <SeekBar
                    android:id="@+id/sb_age_max"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:max="100"
                    android:progress="100"
                    android:progressBackgroundTint="@color/c2"
                    android:progressTint="@color/c5"
                    android:thumb="@mipmap/abc_btn_switch_to_on_mtrl_00001" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>